<form method="post" accept-charset="UTF-8">
    {{ csrfInput({ async: true }) }}
    {{ actionInput('users/login') }}
    {{ redirectInput('/guestbook') }}
    {{ successMessageInput('Signed in successfully') }}
    {{ failMessageInput('Error signing in') }}

    <div class="mt-4 mb-6">
        <label for="loginName" class="font-bold">Username or email</label>
        {{ input('text', 'loginName', '', { id: 'loginName', class: 'w-full px-6 py-4' }) }}
    </div>
    <div class="mb-6">
        <label for="password" class="font-bold">Password</label>
        {{ input('password', 'password', '', { id: 'password', class: 'w-full px-6 py-4' }) }}
    </div>
    <input
        type="submit"
        class="rounded bg-red-600 px-6 py-4 font-bold text-slate-50"
        value="Sign in"
    />
</form>
